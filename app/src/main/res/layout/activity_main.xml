<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="410dp"
        android:layout_height="80dp"
        android:background="#4B0082"
        android:padding="20dp"
        android:text="Calculator"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword6"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp">

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="58dp"
            android:layout_height="29dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="28dp"
            android:text="+"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword6" />

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="58dp"
            android:layout_height="29dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="28dp"
            android:text="-"
            app:layout_constraintStart_toEndOf="@+id/radioButton5"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword6" />

        <RadioButton
            android:id="@+id/radioButton8"
            android:layout_width="58dp"
            android:layout_height="29dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="28dp"
            android:text="*"
            app:layout_constraintStart_toEndOf="@+id/radioButton6"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword6" />


        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="58dp"
            android:layout_height="29dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:text="/"
            app:layout_constraintStart_toEndOf="@+id/radioButton8"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword6" />
    </RadioGroup>

    <EditText
        android:id="@+id/editTextTextPassword6"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="136dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="First Num"

        />

    <EditText
        android:id="@+id/editTextTextPassword7"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_marginTop="136dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.709"
        app:layout_constraintStart_toEndOf="@+id/editTextTextPassword6"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Second Num"
        />


    <Button
        android:id="@+id/button3"
        android:layout_width="255dp"
        android:layout_height="67dp"
        android:layout_marginTop="96dp"
        android:shadowColor="#4B0082"
        android:text="Calculate"
        android:textSize="20dp"
        android:textColorHighlight="#4B0082"
        android:textColorLink="#4B0082"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="330dp"
        android:layout_height="152dp"
        android:layout_marginTop="36dp"
        android:hint="Result"
        android:textSize="25dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"

        />

    <Button
        android:id="@+id/buttonSupprimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textSize="17dp"
        android:backgroundTint="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"

        />


</androidx.constraintlayout.widget.ConstraintLayout>